<Window x:Class="Movie_Ticketing_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie_Ticketing_System"
        mc:Ignorable="d"
        Title="" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="529*"/>
        </Grid.RowDefinitions>
        <TextBox Name="AppTitle" Grid.Row="0" Grid.Column="0" Text="Movie Ticketing System" HorizontalAlignment="Center" FontSize="35" FontWeight="UltraBold"/>
        <ComboBox Name="MainMenu" Grid.Column="0" Grid.Row="1" Loaded="ComboBox_Loaded" FontSize="20" SelectionChanged="MainMenu_SelectionChanged"/>
    </Grid>
</Window>
